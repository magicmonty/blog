  | <html lang="en", itemscope, itemtype="http://schema.org/Blog">

head
  block head
    block meta
      meta(itemprop="name", content=locals.name)
      meta(property="og:title", content=locals.name)
      meta(itemprop="description", content=locals.description)
      meta(property="og:description", content=locals.description)
      meta(itemprop="image", content=locals.url + "/img/logo.png")
