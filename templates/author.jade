mixin author(authorName)
  - var author = contents.authors[authorName + '.json']
  if author
    span(itemprop="author", itemscope="itemscope", itemtype="http://schema.org/Person")
      if author.metadata.profile
        meta(content=author.metadata.profile, itemprop="url")
      if authorName == 'magicmonty'
        a(href='/pages/about.html', rel="author")
          span(itemprop="name")= author.metadata.name
      else
        a(href='mailto:'+author.metadata.email)= author.metadata.name
  else
    =authorName
